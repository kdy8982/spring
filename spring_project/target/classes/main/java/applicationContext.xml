    <!-- Context Loader Listener 가 관리하는 WAC(Web Application Context) 는 web technology 와 관련이 없는,
         business logic, DAO 와 관련된 것이기 때문에, DS(Dispather Servlet) 에 관련된 Controller 는 것은 제외 한다. -->
	<context:component-scan base-package="com">
		<context:exclude-filter expression="org.springframework.stereotype.Controller"
			type="annotation" />
	</context:component-scan>
	 
